rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règle de base : Si l'UID correspond, l'accès est garanti.
    // On autorise la lecture même si le document n'existe pas encore (snapshot vide).
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /{allChildren=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Réservations : Accès étendu pour permettre le matching et l'acceptation
    match /bookings/{bookingId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (
        request.auth.uid == resource.data.clientId || 
        request.auth.uid == resource.data.providerId ||
        request.auth.token.role == 'admin' ||
        resource.data.status == 'PENDING_ASSIGNMENT' // Permet aux prestataires de voir les missions dispo
      );
    }

    // Chats & Messages
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // Règle globale pour les administrateurs
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}