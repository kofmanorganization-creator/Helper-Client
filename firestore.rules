rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Profils Utilisateurs
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
      
      // Paramètres et sous-collections
      match /settings/{settingId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
      match /payment_methods/{methodId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }
    
    // Missions & Bookings (Unifiés)
    // On autorise le 'get' (lecture directe par ID) à tout connecté pour bypass le lag d'indexation
    // On restreint le 'list' (requêtes filtrées) au propriétaire seul
    match /missions/{id} {
      allow get: if isAuthenticated();
      allow list: if isAuthenticated() && resource.data.clientId == request.auth.uid;
      allow write: if isAuthenticated();
    }

    match /bookings/{id} {
      allow get: if isAuthenticated();
      allow list: if isAuthenticated() && resource.data.clientId == request.auth.uid;
      allow write: if isAuthenticated();
    }
    
    // Chats (Accès si l'utilisateur est participant)
    match /chats/{chatId} {
      allow get: if isAuthenticated();
      allow list: if isAuthenticated() && request.auth.uid in resource.data.participants;
      allow write: if isAuthenticated();
      
      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Support
    match /support_tickets/{ticketId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
    }
  }
}